function addMarkers(){
	
	
	var locData = locationdata;
	for (var key in locData)
	{
		
		var lat= locData[key].coordinates[0];
		var long=locData[key].coordinates[1];
		
		//create marker
		var marker = L.marker([lat, long]);
		
		
		marker["info"]= locData[key];
		marker.addTo(map);
		
		marker.on('click', onMapClick);
	}
	
	
}

